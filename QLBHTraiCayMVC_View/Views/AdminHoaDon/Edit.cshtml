@model HoaDonDTO

@{
    ViewBag.Title = "Sửa hóa đơn";
}


<h2 style="color:#4e73df">Sửa hóa đơn</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <h4 class="text-success"> @Html.Raw(TempData["SuccessMsg"])</h4>
    <h4 class="text-danger" style="font-size:14px"> @ViewBag.ErrorMsg</h4>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.NgayDatHang)
    @Html.HiddenFor(model => model.TongTien)


    <div class="form-group row">
        @Html.LabelFor(model => model.HoTenKhach, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HoTenKhach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoTenKhach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-primary" />
            &emsp;
            <div class="btn btn-warning">
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </div>
</div>
}



@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
