@model ChungLoaiOutput

@{
    ViewBag.Title = "Xóa chủng loại";
}

<h2 style="color:#4e73df">Xóa chủng loại</h2>
&emsp;
@if (TempData["SuccessMsg"] != null)
{
    <h4 class="text-success"> @Html.Raw(TempData["SuccessMsg"])</h4>

    <div class="form-actions mt-2">
        <div class="btn btn-warning">
            @Html.ActionLink("Quay lại", "Index")
        </div>
    </div>
}
else
{
    <h4 style="color:#ff0000">Bạn có chắt chắn là muốn xóa chủng loại này?</h4>
    <div>&emsp;</div>

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group row">
                @Html.LabelFor(model => model.MaCL, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
                <div class="col-md-9" style="border-style:groove; border-radius: 5px; ">
                    @Html.DisplayFor(model => model.MaCL, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.TenCL, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
                <div class="col-md-9" style="border-style:groove; border-radius: 5px; ">
                    @Html.DisplayFor(model => model.TenCL, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="form-actions mt-2">
            <input type="submit" value="Xóa" class="btn btn-primary" />
            &emsp;
            <div class="btn btn-warning">
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    }
}
