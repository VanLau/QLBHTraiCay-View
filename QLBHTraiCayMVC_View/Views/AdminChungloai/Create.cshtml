@model ChungLoaiInput

@{
    ViewBag.Title = "Thêm mới chủng loại";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h2 style="color:#4e73df">Thêm mới chủng loại</h2>
        <h4 class="text-success"> @Html.Raw(TempData["SuccessMsg"])</h4>
        &emsp;
        <hr />
        <h4 class="text-danger" style="font-size:14px"> @ViewBag.ErrorMsg</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(model => model.MaCL, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaCL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaCL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.TenCL, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenCL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenCL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                &emsp;
                <div class="btn btn-warning">
                    @Html.ActionLink("Quay lại", "Index")
                </div>
            </div>
        </div>
    </div>
}
    
  
