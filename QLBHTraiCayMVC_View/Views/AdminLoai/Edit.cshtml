@model LoaiInput

@{
    ViewBag.Title = "Sửa loại hàng";
}
<h2 style="color:#4e73df">Sửa loại hàng</h2>
<h4 class="text-success"> @Html.Raw(TempData["SuccessMsg"])</h4>
&emsp;

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        <h4 class="text-danger" style="font-size:14px"> @ViewBag.ErrorMsg</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group row">
            @Html.LabelFor(model => model.MaLoai, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.TenLoai, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ChungLoaiID, htmlAttributes: new { @class = "control-label col-md-1 font-weight-bold" })
            <div class="col-md-10">
                @Html.DropDownList("ChungLoaiID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ChungLoaiID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                &emsp;
                <div class="btn btn-warning">
                    @Html.ActionLink("Quay lại", "Index")
                </div>
            </div>
        </div>
    </div>
}


